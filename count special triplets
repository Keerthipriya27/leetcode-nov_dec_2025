class Solution:
    def specialTriplets(self, nums):
        MOD = 10**9 + 7        
        right = defaultdict(int)
        for x in nums:
            right[x] += 1        
        left = defaultdict(int)
        ans = 0        
        for x in nums:
            right[x] -= 1
            target = x * 2
            ans += left[target] * right[target]
            ans %= MOD
            left[x] += 1       
        return ans
