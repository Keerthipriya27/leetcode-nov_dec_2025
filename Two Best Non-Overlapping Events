class Solution:
    def maxTwoEvents(self, events: List[List[int]]) -> int:
        events.sort()
        ends = sorted((e[1], e[2]) for e in events)
        i = 0
        best = 0
        ans = 0
        for s, e, v in events:
            while i < len(ends) and ends[i][0] < s:
                best = max(best, ends[i][1])
                i += 1
            ans = max(ans, v, best + v)
        return ans
